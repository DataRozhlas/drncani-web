@import colors
@import prefixes
@import 'components/triangle'

@import fitter

#article .ig
  @import basics
  @import overlay
  @import player

#article .ig
  .map
    position relative
    .szn-logo
      position absolute
      bottom 15px
      right 10px

#article .ig.base
  position relative
  .highway-container
    position absolute
    top 0px
    left 0px
    width 250px
    .header
    .footer
      position absolute
      left 0px
      width 100%
      height 20px
      background white
    .header
      top 0px
      background linear-gradient(to bottom, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 100%);
    .footer
      bottom 0px
      background linear-gradient(to top, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 100%);
