@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
  .map
    position absolute
    top 0px
    left 400px
    width calc(100% - 400px)
    height 100%
    .leaflet-div-icon
      border 0px none
      background none
      > div
         width 100%
         height 100%
         > div
           position absolute
           top 0px
           width 50%
           height 100%
           &:first-child
             left 0px
           &:last-child
             left 50%

