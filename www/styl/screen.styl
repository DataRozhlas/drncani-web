@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .overlay-container
    position absolute
    top 0px
    left 300px
    width 600px
    height 250px
    .map
      position absolute
      top 0px
      left 0px
      width 50%
      height 100%
      .leaflet-div-icon
        border 0px none
        background none
        > div
          width 100%
          height 100%
          > div
            position absolute
            top 0px
            width 50%
            height 100%
            &:first-child
              left 0px
            &:last-child
              left 50%

    .playerb
      position absolute
      top 0px
      left 50%
      width 50%
      height 100%
